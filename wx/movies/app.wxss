/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
}

.btn {
	background-color:#fff;
	color:#000;
	padding-left:90rpx;
	flex: 1;	
	display: flex;
	align-items:center;
	cursor: pointer;
}
.btn image{
	width: 30px;
	height: 30px;
	margin-right: 80px;
	align-items:center;
}
.btn text{
	flex: 1;
	align-items:center;
	padding-bottom:25px;
}
.board{
	display: flex;
	flex-direction:column;
}