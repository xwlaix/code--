<script>
  import wepy from 'wepy'
  import { service } from '../../config.js'
  import http from '../../mixins/http'
  import base from '../../mixins/base'
  import user from '../../mixins/user'
  import Screen from '../../components/screen'
  import ShareMessage from '../../mixins/ShareMessage'

  export default class libraryBorrow extends wepy.page {
    mixins = [base, http, user, ShareMessage]
    config = {
      navigationBarTitleText: '借阅管理'
    }
    data = {
      libraryId: 0,
      library: {},
      borrows: [],
      tabs: ['预约', '借阅中', '已还'],
      activeIndex: 0,
      sliderOffset: 0,
      sliderLeft: 0,
      sliderWidth: 180,
      screenWidth: 360,
      library_num: 0,
      message: true
    }

    computed = {
      isReturn() {
        return Boolean(this.borrow_id > 0)
      }
    }

    onLoad(query) {
      this.id = query && +query.id
      this.libraryId = query && +query.library_id
      let _this = this
      wx.getSystemInfo({success: function (rst) {
        _this.screenWidth = rst.screenWidth
      }})
      this.sliderWidth = _this.screenWidth / this.tabs.length
      this.sliderLeft = 0
      this.sliderOffset = _this.screenWidth / this.tabs.length * this.activeIndex
    }

    onShow() {
      // 初始化页面数据
      this.initPageData()
    }

    onPullDownRefresh() {
      this.initPageData()
    }

    // 初始化页面数据
    initPageData() {
      // 请求图书详情
      this.getMembers(this.activeIndex)
    }

    // 获取图书信息
    getMembers(Index) {
      let url = ''
      let statusIndex = ''
      if (Index == 0) {
        statusIndex = 'RESERVE'
        url = service.libraries + '/' + this.libraryId + '/borrows'
      } else if (Index == 1) {
        statusIndex = 'BORROW'
        url = service.libraries + '/' + this.libraryId + '/borrows'
      } else if (Index == 2) {
        statusIndex = 'RETURN'
        url = service.libraries + '/' + this.libraryId + '/borrows'
      }
      this.$get({
        url: url,
        data: {
          'status': statusIndex
        }
      }, {
        success: ({code, data}) => {
          this.borrows = data.borrows
          this.library = data.library
          this.library_num = this.borrows.length
        }
      })

      // 停止下拉状态
      wx.stopPullDownRefresh()
    }

    methods = {
      cancel(libraryId, id) {
        console.log(libraryId)
        console.log(id)
        this.$delete({
          url: service.libraries + '/' + libraryId + '/borrows/' + id
        }, {
          success: ({code, data}) => {
            this.getMembers(this.activeIndex)
          }
        })
      },
      makePhoneCall(mobile) {
        wx.makePhoneCall({
          phoneNumber: mobile
        })
      },
      goto(url) {
        wx.navigateTo({url: url})
      },
      tabClick (e) {
        this.sliderOffset = e.currentTarget.offsetLeft
        this.activeIndex = e.currentTarget.id
        this.getMembers(this.activeIndex)
//        if (this.activeIndex === '1') {
//          this.getLibraries()
//        }
      },
      checkUser(e) {
        console.log('radio发生change事件，携带value值为：', e.detail.value)
        this.borrow_id = e.detail.value
      }
    }
    components = {
      Screen
    }
  }
</script>

