<script>
  import wepy from 'wepy'
  import { service } from '../../config.js'
  import http from '../../mixins/http'
  import base from '../../mixins/base'
  import user from '../../mixins/user'
  import Screen from '../../components/screen'
  import ShareMessage from '../../mixins/ShareMessage'

  export default class libraryMembers extends wepy.page {
    mixins = [base, http, user, ShareMessage]
    config = {
      navigationBarTitleText: '会员管理'
    }
    data = {
      libraryId: 0,
      library: {},
      members: [],
      tabs: ['待审核', '会员', '管理员'],
      activeIndex: 0,
      sliderOffset: 0,
      sliderLeft: 0,
      sliderWidth: 180,
      screenWidth: 360,
      library_num: 0,
      message: true
    }

    computed = {
      isReturn() {
        return Boolean(this.borrow_id > 0)
      }
    }

    onLoad(query) {
      this.id = query && +query.id
      this.libraryId = query && +query.library_id
      let _this = this
      wx.getSystemInfo({success: function (rst) {
        _this.screenWidth = rst.screenWidth
      }})
      this.sliderWidth = _this.screenWidth / this.tabs.length
      this.sliderLeft = 0
      this.sliderOffset = _this.screenWidth / this.tabs.length * this.activeIndex
    }

    onShow() {
      // 初始化页面数据
      this.initPageData()
    }

    onPullDownRefresh() {
      this.initPageData()
    }

    // 初始化页面数据
    initPageData() {
      // 请求图书详情
      this.getMembers(this.activeIndex)
    }

    // 获取图书信息
    getMembers(Index) {
      let that = this
      let url = ''
      let statusIndex = ''
      if (Index == 0) {
        statusIndex = 'JOIN'
        url = service.libraries + '/' + this.libraryId + '/members'
      } else if (Index == 1) {
        statusIndex = 'MEMBER'
        url = service.libraries + '/' + this.libraryId + '/members'
      } else if (Index == 2) {
        statusIndex = 'ADMIN'
        url = service.libraries + '/' + this.libraryId + '/members'
      }
      this.$get({
        url: url,
        data: {
          'status': statusIndex
        }
      }, {
        success: ({code, data}) => {
          that.members = data.members
          that.library = data.library
          that.library_num = this.members.length
//          if (that.members.length) {
//            that.message = false
//          }else {
//            that.message = true
//          }
          that.$apply()
        },
        fail: ({code, data}) => {}
      })

      // 停止下拉状态
      wx.stopPullDownRefresh()
    }

    methods = {
      goto(url) {
        wx.navigateTo({url: url})
      },
      tabClick (e) {
        this.sliderOffset = e.currentTarget.offsetLeft
        this.activeIndex = e.currentTarget.id
        this.getMembers(this.activeIndex)
      },
      checkUser(e) {
        console.log('radio发生change事件，携带value值为：', e.detail.value)
        this.borrow_id = e.detail.value
      },
      makePhoneCall(mobile) {
        wx.makePhoneCall({
          phoneNumber: mobile
        })
      },
      memberUpdate(id, ops) {
        let self = this
        let url = service.libraries + '/' + this.libraryId + '/members/' + id + '/' + ops
        this.$put({url: url}, {
          success: ({code, data}) => {
            wx.redirectTo({url: '/pages/library/members?library_id=' + self.libraryId})
          },
          fail: ({code, data}) => {}
        })
      }
    }
    components = {
      Screen
    }
  }
</script>

