.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.toast_content {  
  width: 50%;  
  padding: 30rpx;  
  background: rgba(0, 0, 0, 0.8);  
  border-radius: 20rpx;  
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
} 
 .weui-cell__bd {
     display: block;
     height: 1.4rem;
     text-overflow: clip;
     overflow: hidden;
     white-space: nowrap;
     font-family: UICTFontTextStyleBody;
     min-height: 1.4rem;
 }
 .pay {
     width: 30%;
     display: inline-block;
     max-width: 150px;
     min-width: 105px;
     text-align: center;
     margin-bottom: 15px;
     background-color: #ff8f16;
     color: white;
     line-height: 2;
     border-radius: 8px;
 }
 .weui-cells {
     background: #fceee0;
     height: calc(100% - 2em);
     margin-top: 0;
     padding: 1em;
     line-height: 1.47058824;
     font-size: 17px;
     overflow: hidden;
     position: relative;
 }
 .weui-cells:after, .weui-panel:after {
     height: 0!important;
     position: static;
 }
 .weui-cell {
     padding-left: 0px!important;
     padding: 10px 15px;
     position: relative;
     display: -webkit-box;
     display: -webkit-flex;
     display: flex;
     -webkit-box-align: center;
     -webkit-align-items: center;
     align-items: center;
 }
 .weui-label {
     display: block;
     width: 105px;
     word-wrap: break-word;
     word-break: break-all;
 }
 .weui-count {
     white-space: nowrap!important;
     display: inline-block;
     height: 25px;
     line-height: 25px;
     width: 100%!important;
 }
 .weui-count .weui-count__btn {
     height: 21px;
     width: 21px;
     line-height: 21px;
     display: inline-block;
     position: relative;
     border: 1px solid #04BE02;
     border-radius: 50%;
     vertical-align: -6px;
 }
 a {
     text-decoration: none;
     -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
 }
 .weui-count .weui-count__number {
     background-color: transparent;
     font-size: .8rem;
     border: 0;
     width: 1.3rem;
     text-align: center;
     color: #5f646e;
     display: inline-block!important;
     vertical-align: middle;
 }
 .weui-count .weui-count__increase {
     background-color: #04BE02;
 }
 .weui-count .weui-count__btn:after, .weui-count .weui-count__btn:before {
     content: " ";
     position: absolute;
     height: 1px;
     width: 11px;
     background-color: #04BE02;
     left: 50%;
     top: 50%;
     margin-left: -5.5px;
 }
 .weui-count .weui-count__decrease:after {
     background-color: #fceee0!important;
 }
 .weui-count .weui-count__decrease:before {
     background-color: #04BE02!important;
 }
 .weui-count .weui-count__increase:after, .weui-count .weui-count__increase:before {
     background-color: #fff!important;
 }
 .weui-count .weui-count__btn:after {
     height: 11px;
     width: 1px;
     margin-top: -5.5px;
     margin-left: -1px;
 }