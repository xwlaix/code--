 page {
     line-height: 1.6;
     font-family: -apple-system-font, Helvetica Neue, sans-serif;
     font-size: 16px;
     padding: 1em;
     background-color: #ef8e3b;
     height: calc(100% - 2em);
     width: calc(100% - 2em);
 }
