 page {
     background-color: #fceee0;
     font-family: "微软雅黑", "Microsoft YaHei"!important;
 }
 .weui-width {
     width: 94% !important;
     border-radius: 8px;
     opacity: 1;
     visibility: visible;
     z-index: 5000;
     background-color: #fff;
     text-align: center;
     overflow: hidden;
     margin: 10px auto;
     box-shadow: 2px 2px 2px #ddd;
 }
 .weui-dialog__ft:after {
     height: 0!important;
     position: static;
 }
 .cmcc {
     background: linear-gradient(to right, #61b7f3, #3ea6f0)
 }
 .ctcc {
     background: linear-gradient(to right, #759dd9, #6684bd)
 }
 .cucc {
     background: linear-gradient(to right, #f27a4d, #e44640)
 }
 .Tip{
    display: inline-flex;
 }
 .RightTip{
    flex: 3 0 auto;
 }
 .leftPic{
    flex: 2 0 auto;
 }
 .leftImage{
    width: 92px!important;
    height: 92px!important;
    padding: 0 2em;
 } 
 .RightTip p {
     text-align: left;
     padding: .1em 0 .1em .8em;
     font-size: 16px;
     display: block;
 }

 .order {
     width: 30%;
     display: inline-block;
     max-width: 150px;
     min-width: 105px;
     text-align: center;
     margin-bottom: 15px;
     background-color: #ff8f16;
     color: white;
     line-height: 2;
     border-radius: 8px;
     margin-top:15px;
 }
 .weui-dialog__hd {
    color: rgb(255, 255, 255);
    background-color: rgb(51, 166, 240);
    padding-bottom: 0.8em;
    padding-top: 0.8em;
}
.image {
    width: 100%;
}
.weui-dialog__title {
    font-weight: 400;
    font-size: 18px;
}
.weui-dialog__bd {
    min-height: auto;
    color: #0a0a0a;
    padding: 0.8em;
    padding: 0 1.6em .8em;
    min-height: 40px;
    font-size: 15px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999;
}
.weui-dialog__ft {
    position: relative;
    line-height: 48px;
    font-size: 18px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.weui-dialog__btn {
    display: block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    color: #3cc51f;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    position: relative;
}